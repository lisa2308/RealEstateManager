<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_estate_details_recycler"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Ceci est la description du bien immobilier"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surface"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_overscan"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de piÃ¨ces"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de salles de bain"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_shower"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_bathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de chambres"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_bed"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_bedroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localisation"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_map_marker"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_postal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_estate_details_txt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20m2"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>

        <com.google.android.gms.maps.MapView xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_estate_details_map"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            map:mapType="normal"
            map:liteMode="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>
</ScrollView>