<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de bien :"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <RadioGroup
            android:id="@+id/fragment_search_rdgroup_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_flat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appartement"/>
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maison"
                    android:layout_marginStart="20dp"/>
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_duplex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duplex"/>
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_villa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villa"
                    android:layout_marginStart="20dp"/>
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_mansion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manoir"/>
                <RadioButton
                    android:id="@+id/fragment_search_rdbtn_penthouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penthouse"
                    android:layout_marginStart="20dp"/>
            </GridLayout>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix :"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Minimum"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/fragment_search_edit_price_min"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Maximum"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/fragment_search_edit_price_max"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de pièces :"
            android:textSize="18sp"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Minimum"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/fragment_search_edit_room_min"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pièce(s)"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Maximum"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/fragment_search_edit_room_max"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pièce(s)"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code postal :"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/fragment_search_edit_postal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/fragment_search_btn_search"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Rechercher"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</ScrollView>